<UserControl x:Class="EasySave.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.View"
        mc:Ignorable="d">
    <UserControl.Resources>
         <Image x:Key="folder" Source="../Resources/folder.png"/>
    </UserControl.Resources>

    <StackPanel Height="450" Width="800">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding TLanguageChoice}" />
            <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding SLanguage}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Height="35" Source="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="{Binding TEncryptedExtension}" VerticalAlignment="Top" />
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ListView Height ="100" Width="100" ItemsSource="{Binding EncryptedExtensions}" SelectedItem="{Binding SEncryptedExtension}" />
                    <Button Content="{Binding TEncryptedExtensionDelete}" Height="25" VerticalAlignment="Top" Command="{Binding DeleteEncryptedExtensionCommand}" Margin="5,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="100" Height="25" Text="{Binding EncryptedExtensionTextBox, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="{Binding TEncryptedExtensionAdd}" Height="25" VerticalAlignment="Top" Command="{Binding AddEncryptedExtensionCommand}" Margin="5,0,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="{Binding TBusinessApp}" VerticalAlignment="Top" />
            <TextBox Width="250" Height="25" Text="{Binding BusinessApp}" />
            <Button Content="{StaticResource folder}" Height="25" Command="{Binding SelectBuisnessAppExeCommand}" Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="{Binding TLogTypeChoice}" />
            <ComboBox ItemsSource="{Binding LogTypes}" SelectedItem="{Binding SLogType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="{Binding TMusicChoice}" />
            <ComboBox ItemsSource="{Binding Playlist}" SelectedItem="{Binding SMusic}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </StackPanel>
</UserControl>
